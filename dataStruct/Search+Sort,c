#include <stdio.h>

int BinSearch(int Data[], int first, int last, int Target, int *location) {
    if (first > last) {
        return 0;
    }
    int middle = (first + last) / 2;
    if (Target == Data[middle]) {
        *location = middle;
        return 1;
    } else if (Target < Data[middle]) {
        return BinSearch(Data, first, middle - 1, Target, location);
    } else {
        return BinSearch(Data, middle + 1, last, Target, location);
    }
}

void BubbleSort(int Size, int Data[]) {
    int i, j ,Temp;
    for(i = 0; i < Size; i++) {
        for(j = Size; j > i; j--) {
            if(Data[j] < Data[j-1]) {
                Temp = Data[j];
                Data[j] = Data[j-1];
                Data[j-1] = Temp;
            }
        }
    }
}

int main() {
    int Data[10] = {7, 91, 27, 65, 50, 33, 64, 41, 21, 4},
        Size = sizeof(Data) / sizeof(Data[0]),
        i, location = -1,target = 50;
    printf("Array First\n");
    for(i = 0; i <= 9; i++) {
        printf("%d ", Data[i]);
    }
    printf("\n");

    BubbleSort(Size, Data);    

    printf("Array Last\n");
    for(i = 0; i < Size; i++) {
        printf("%d ", Data[i]);
    }
    printf("\n");

    int found = BinSearch(Data, 0, Size - 1, target, &location);
    if (found)
        printf("Found %d at index %d\n", target, location);
    else
        printf("Not Found\n");
    return 0;
}
